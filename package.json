{
  "name": "hireall",
  "version": "1.0.0",
  "description": "A monorepo for HireAll - Chrome extension and job board for tracking sponsored roles",
  "private": true,
  "workspaces": [
    "packages/web",
    "packages/extension"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev -w packages/web",
    "dev:extension": "npm run dev -w packages/extension",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:extension\"",
    "build": "npm run build -w packages/web && npm run build -w packages/extension",
    "lint": "npm run lint -w packages/web",
    "test": "npm run test -w packages/web || true && npm run test -w packages/extension || true",
    "vercel-build": "npm run build -w packages/web"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@types/node-fetch": "^2.6.13",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.1"
  }
}

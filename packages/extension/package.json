{
  "name": "@hireall/extension",
  "version": "1.0.2",
  "description": "Chrome extension for highlighting sponsored job roles",
  "main": "dist/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "WEB_APP_URL=http://localhost:3000 webpack --mode production",
    "build:prod": "WEB_APP_URL=https://hireall.app webpack --mode production",
    "build:test": "cp .env.test .env && webpack --mode production",
    "lint": "eslint src --ext .ts,.js",
    "publish:store": "npm run build:prod && zip -r hireall-extension.zip dist/",
    "publish:test": "npm run build:test && zip -r hireall-extension-test.zip dist/",
  "package:zip": "npm run build && cd dist && zip -r ../hireall-extension-dist.zip .",
    "setup:chrome-store": "node scripts/setup-chrome-store.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@tiptap/extension-character-count": "^3.4.4",
    "@tiptap/extension-code-block": "^3.4.4",
    "@tiptap/extension-code-block-lowlight": "^3.4.4",
    "@tiptap/extension-color": "^3.4.4",
    "@tiptap/extension-highlight": "^3.4.4",
    "@tiptap/extension-image": "^3.4.4",
    "@tiptap/extension-link": "^3.4.4",
    "@tiptap/extension-placeholder": "^3.4.4",
    "@tiptap/extension-subscript": "^3.4.4",
    "@tiptap/extension-superscript": "^3.4.4",
    "@tiptap/extension-table": "^3.4.4",
    "@tiptap/extension-table-cell": "^3.4.4",
    "@tiptap/extension-table-header": "^3.4.4",
    "@tiptap/extension-table-row": "^3.4.4",
    "@tiptap/extension-text-align": "^3.4.4",
    "@tiptap/extension-text-style": "^3.4.4",
    "@tiptap/extension-underline": "^3.4.4",
    "@tiptap/pm": "^3.4.4",
    "@tiptap/react": "^3.4.4",
    "@tiptap/starter-kit": "^3.4.4",
    "class-variance-authority": "^0.7.1",
    "firebase": "^10.13.1",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.539.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.0.0",
    "eslint": "^8.45.0",
    "ts-loader": "^9.4.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}

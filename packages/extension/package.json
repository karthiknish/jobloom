{
  "name": "@hireall/extension",
  "version": "1.0.2",
  "description": "Chrome extension for highlighting sponsored job roles",
  "main": "dist/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "tsc --noEmit && webpack --mode production",
    "build:dev": "tsc --noEmit && WEB_APP_URL=http://localhost:3000 webpack --mode development",
    "build:prod": "tsc --noEmit && WEB_APP_URL=https://hireall.app webpack --mode production",
    "build:test": "cp .env.test .env && tsc --noEmit && webpack --mode production",
    "lint": "eslint src --ext .ts,.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "publish:store": "npm run build:prod && zip -r hireall-extension.zip dist/",
    "publish:test": "npm run build:test && zip -r hireall-extension-test.zip dist/",
    "package:zip": "npm run build && cd dist && zip -r ../hireall-extension-dist.zip .",
    "setup:chrome-store": "node scripts/setup-chrome-store.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hireall/shared": "*",
    "firebase": "^10.13.1",
    "posthog-js": "^1.311.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "dotenv-webpack": "^8.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.4",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.4.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}

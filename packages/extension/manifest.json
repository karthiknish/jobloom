{
  "manifest_version": 3,
  "name": "HireAll - Job Tracker",
  "version": "1.0.2",
  "description": "LinkedIn job sponsored highlighting and application tracking",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.hireall.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://*.vercel.app/*",
        "https://*.netlify.app/*",
        "https://hireall.app/*"
      ],
      "js": ["webapp-content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HireAll Job Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

{
  "manifest_version": 3,
  "name": "HireAll - Job Tracker",
  "version": "1.0.0",
  "description": "Highlight sponsored job roles and track applications",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.jobs.google.com/*",
    "https://*.seek.com/*",
    "https://*.totaljobs.com/*",
    "https://*.reed.co.uk/*",
    "https://*.jobsite.co.uk/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "content_scripts": "script-src 'self'; object-src 'none';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.jobs.google.com/*",
        "https://*.seek.com/*",
        "https://*.totaljobs.com/*",
        "https://*.reed.co.uk/*",
        "https://*.jobsite.co.uk/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://*.vercel.app/*",
        "https://*.netlify.app/*",
        "https://hireall.app/*"
      ],
      "js": ["webapp-content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HireAll Job Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
